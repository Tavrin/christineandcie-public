<!DOCTYPE html>
<html lang="fr">
<head>
  <% include ../../partials/header.ejs %>
  <style>
  pre.ql-syntax {
  background-color: #23241f;
  color: #f8f8f2;
  overflow: visible;
}
  </style>
  <link rel="stylesheet" href="/stylesheets/blogTag.css">
  <link rel="canonical" href="https://christineandcie.fr/blog/tag/<%=tag%>/1">
</head>

<body>

  <% include ../../partials/nav.ejs %>
  <div class="container-fluid" id="blog-container" style="background:#F6F6F6;" >
  <!-- <h1 class="text-center m-3 display-4 blog-page-titre">Blog</h1> -->
  <div class="header__bottom mx-auto">
  <div class="header__bottom-inner">
      <nav class="menu-main-navigation-container">
          <ul id="menu-main-navigation" class="menu">
    <li id="menu-item-10607" class="dropdown menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10607"><a href="/blog/categorie/lifestyle/1">Lifestyle</a></li>
    <li id="menu-item-10608" class="dropdown menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10608"><a href="/blog/categorie/sante/1">Santé</a></li>
    <li id="menu-item-10609" class="dropdown menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10609"><a href="/blog/categorie/sport/1">Sport</a></li>
    <li id="menu-item-10610" class="dropdown menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10610"><a href="/blog/categorie/travail/1">Travail</a></li>
    <li id="menu-item-10710" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10710"><a href="/blog/categorie/bien-etre/1">Bien-être</a></li>
    <li id="menu-item-10711" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-10711"><a href="/blog/categorie/beaute/1">Beauté</a></li>
    </ul>
</nav>
</div>
</div>
<div class="row">
    <h1 class="mx-auto text-uppercase tagTitle"><%=tag%></h1>
</div>
      <div class="flex-wrapper">
 <% blogposts.forEach(function(blogpost){ %>
        <div class="article-card blog-post">
            <div class="article-card-image" style="background-image:url('<%=blogpost.thumbnail %>'); background-size: cover; background-position: center center;">
                    <!-- <img class="img-fluid blog-thumbnail" style="display: none" src="<%=blogpost.thumbnail %>"> -->
            </div>
            <div class="article-card-infos">
                <h2 class="blog-title"><a href="/blog/view/<%=blogpost._id %>"><%=blogpost.title %></a></h2>
                <div class="blog-info">
                    <span class="blog-time"><%=moment(blogpost.date).format('DD MMMM YYYY')%></span> <span><% if(blogpost.author && blogpost.author[0]!=undefined){%><%=blogpost.author[0].username%><%}else{%>Christine and Cie<%}%></span>
                </div>
                
                <div class="blog-description">
                    <p>
                    <%-blogpost.description%>
                
                    </p>
                </div>
                <a class="btn btn-outline-primary mb-4 mt-1 blog-button" href="/blog/view/<%=blogpost._id %>">Lire la suite</a>
 
            </div>
        </div>
        
       <!-- <div class="fade_rule"></div>  -->
 <% }) %>
</div>
 <% if (pages > 0) { %>
    <div class =" row">
    <nav aria-label="Page navigation example" class="mx-auto mt-5">
    <ul class="pagination">
        <% if (current == 1) { %>
            <li class="disabled page-item"><a class="page-link">Début</a></li>
        <% } else { %>
            <li class="page-item"><a class="page-link" href="/blog/tag/<%=tag%>/1">Début</a></li>
        <% } %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
            <li class="disabled page-item"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
                <li class="active page-item"><a class="page-link"><%= i %></a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="/blog/tag/<%=tag%>/<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
                <li class="disabled page-item"><a class="page-link">...</a></li>
            <% } %>
        <% } %>
        <% if (current == pages) { %>
            <li class="disabled page-item"><a class="page-link">Fin</a></li>
        <% } else { %>
            <li class="page-item"><a class="page-link" href="/blog/tag/<%=tag%>/<%= pages %>">Fin</a></li>
        <% } %>
    </ul>
</nav>
</div>
<% } %>
 </div>
 <% include ../../partials/footer.ejs %>
 <script>
  $("#navBlog").addClass("active")
 </script>
  </body>
  </html>