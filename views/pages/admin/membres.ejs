<div class="container-fluid">
                <div class="row ">
              <h1 class=" mr-auto mt-5 pl-5 mb-5 titre-categorie">Liste des membres :</h1>
              </div>
              <div class="row">
                Admins
              <table class="mx-auto  table table-responsive-sm table-light mb-5">
                <thead class="thead-dark custom-table-1">  
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">e-mail</th>
                    <th scope="col">date d'inscription</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody class="posts">
                    <% members.forEach(function(member){%>
                      <%if(member.isAdmin == true){%>
                        <tr class="ligne">
                            <td style="text-transform: capitalize"><%= member.username%></td>
                            <td><%= member.email%></td>
                            <td><%=moment(member.signupDate).local().format("LLL")%></td>
                            <td align="right"><a class="btn btn-primary" href="/utilisateurs/<%=member._id%>"> Voir Profil</a> <a data-toggle="modal" id='editmember' data-target="#exampleModal" data-member="<%=member._id%>" class="btn btn-admin-editer" href="#"> Editer </a><%if(currentUser.isDev == true){%><a href="#">test</a><%}%></td>
                            </tr>
                    <%}})%>
                </tbody>
                  </table>
                  <span class="mt-5" > Membres</span>
                  <table class="mx-auto  table table-responsive-sm table-light">
                      <thead class="thead-dark custom-table-1">  
                        <tr>
                          <th scope="col">Nom</th>
                          <th scope="col">e-mail</th>
                          <th scope="col">date d'inscription</th>
                          <th scope="col">Actions</th>
                        </tr>
                      </thead>
                      <tbody class="posts">
                          <% members.forEach(function(member){%>
                            <%if(member.isAdmin == false){%>
                              <tr class="ligne">
                                  <td style="text-transform: capitalize"><%= member.username%></td>
                                  <td><%= member.email%></td>
                                  <td><%=moment(member.signupDate).local().format("LLL")%></td>
                                  <td align="right"><a class="btn btn-primary" href="/utilisateurs/<%=member._id%>"> Voir Profil</a> <a data-toggle="modal" id='editmember' data-target="#exampleModal" data-member="<%=member._id%>" class="btn btn-admin-editer" href="#"> Editer </a></td>
                                  </tr>
                          <%}})%>
                      </tbody>
                        </table>
                      
                    
                </div>
