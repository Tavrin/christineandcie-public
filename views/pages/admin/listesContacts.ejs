        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Nouvelle liste</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form id="nouvelleListe">
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">Nom :</label>
                      <input type="text" class="form-control" id="listName">
                    </div>
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">Description :</label>
                      <textarea class="form-control" id="listDescription"></textarea>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                  <button type="button" class="btn btn-primary" id="boutonNouvelleListe">Enregistrer</button>
                </div>
              </div>
            </div>
          </div>
<div class="container-fluid">
                <div class="row ">
              <h1 class=" mr-auto mt-5 pl-5 mb-5 titre-categorie">Listes de contacts</h1>
              <button class="btn btn-lg  btn-admin-action ml-auto mb-5 mt-5 mr-5"   data-toggle="modal" data-target="#exampleModal"> Nouvelle liste</button>
              </div>
              <div class="row"></div>
                  <% lists.forEach(function(list){%>
                   
                    
              <table class="mx-auto  table table-responsive-sm table-light">
                  <h4 style="text-transform: capitalize"><%=list.name%></h4> 
                <thead class="thead-dark custom-table-1">  
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">e-mail</th>
                    <th scope="col">date d'inscription</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody class="posts">
                   
                        <% list.contacts.forEach(function(contact){%>
                        <tr class="ligne">
                            <td style="text-transform: capitalize"><%= contact.name%></td>
                            <td><%= contact.email%></td>
                            <td><%=moment(contact.date).format("LLL")%></td>
                            <!-- <td align=\"right\"><a class=\"btn btn-primary\" href=\"/blog/view/'+blogpost._id+'\"> Voir </a> <a class=\"btn btn-primary\" href=\"/blog/'+blogpost._id+'/editer\"> Editer </a> <a data-toggle="modal" data-target="#exampleModal" class=\"btn btn-danger\" href=\"#\"> Supprimer </a></td> -->
                            </tr>
                            <%})%>
                    <%})%>
                </tbody>
                  </table>
                       
                      
                    
                </div>
            </div>
            </div>
