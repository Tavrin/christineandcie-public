<body>
    <div class="bg d-flex flex-column align-items-center justify-content-center">
          <div class="login-container">
            <!-- <h1 class="display-1 text-center bunker-title login-title">Christine & Cie</h1> -->
            <h1 class=" mb-2 mt-5 text-center login-subtitle">Réinitialisation du mot de passe</h1>
            <form action="/reset/<%=token%>" method="POST" class="form-signin login">


              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="resetPassword" class="login-label">Nouveau mot de passe</label>
                  <input type="password" class="form-control mb-3 login-input" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,30}" required title="Le mot de passe doit contenir au moins une majuscule, une minuscule, un chiffre et de 8 à 30 caractères" id="resetPassword" name="password" placeholder="">
                </div>
              <div class="form-group col-md-6">
                <label for="passwordConfirm" class="login-label">Confirmation</label>
                <input name="passwordConfirm" class="form-control mb-3 mt-4 login-input" required="required" type="password" id="passwordConfirm" oninput="check(this)">
              </div>
            </div>
                  <button class="btn btn-lg btn-primary btn-block login-input login-submit">Réinitialiser</button>
              </form>
            </div>
          </div>
      <% include ../partials/footer.ejs %>
    </body>
    <script>
      function check(input) {
          if (input.value != document.getElementById('resetPassword').value) {
              input.setCustomValidity('Les mots de passe doivent correspondre');
          } else {
              // input is valid -- reset the error message
              input.setCustomValidity('');
          }
      }
  </script>
